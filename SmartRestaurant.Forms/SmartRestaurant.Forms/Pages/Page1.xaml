                                            HorizontalOptions="End"
                                            IsVisible="{Binding Quantity, Converter={StaticResource zeroVisibilityConverter}}"
                                            Text="ADD"
                                            TextColor="#FFFFFF"
                                            VerticalOptions="CenterAndExpand"
