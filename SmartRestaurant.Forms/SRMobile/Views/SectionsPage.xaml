<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" NavigationPage.HasNavigationBar="True" NavigationPage.HasBackButton="False"
             x:Class="SmartRestaurant.Diner.Views.SectionsPage"
             xmlns:translator="clr-namespace:SmartRestaurant.Diner.Helpers"
             Title="{translator:Translate RestaurantName}"
             BackgroundColor="White"
             >
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="32,62,32,62" >
            
            <Label Text="{translator:Translate Menu}" FontSize="20" Margin="20,0,0,0" FontFamily="Assets/Fonts/Roboto.ttf"
                   HorizontalOptions="{Binding OrientationText}"  Opacity=".5" TextColor="#3C536A"/>
            <ScrollView x:Name="scrollView"  BackgroundColor="White" VerticalOptions="FillAndExpand">
                <ListView
                  ItemsSource = "{Binding Sections}"                   
                  HasUnevenRows = "true" 
                  SeparatorVisibility="None"                      
                  SelectionMode="Single"
                  SelectedItem="{Binding Path=selectedSection}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Frame  CornerRadius="20" HeightRequest="220" 
                                         BackgroundColor="Transparent"
                                        Margin="2"
                                        BorderColor="Transparent">

                                    <Grid RowSpacing="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="1*"></RowDefinition>
                                        </Grid.RowDefinitions>

                                        <Image Grid.Row="0" 
                                               Source="{Binding Image}"
                                               HorizontalOptions="FillAndExpand"
                                               VerticalOptions="FillAndExpand" 
                                               Aspect="Fill" 
                                              />
                                        <Label Grid.Row="0"
                                               Text="{Binding Name}" HorizontalTextAlignment="{Binding OrientationText}"
                                               
                                               VerticalTextAlignment="End"
                                               
                                               HorizontalOptions="FillAndExpand"
                                               Margin="38,0,0,44"
                                               VerticalOptions="FillAndExpand"
                                               FontSize="24" FontFamily="Assets/Fonts/Roboto.ttf"
                                               FontAttributes="Bold"
                                               TextColor="White"/>
                                    </Grid>

                                </Frame>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView >
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>