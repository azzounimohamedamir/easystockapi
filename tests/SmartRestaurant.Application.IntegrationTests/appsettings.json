{
  "UseInMemoryDatabase": false, // Application.IntegrationTests are not designed to work with InMemory database.
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=SmartRestaurantTestDb;Trusted_Connection=True;MultipleActiveResultSets=true;",
    "IdentityConnection": "Server=(localdb)\\mssqllocaldb;Database=SmartRestaurantIdentityTestDb;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Smtp": {
    "Server": "localhost",
    "Email": "no-reply@fakesmtp.com",
    "Pass": "",
    "Port": "789"
  },
  "WebPortal": {
    "host": "https://test.smartrestaurant.io",
    "pathToEmployeeAcceptInvitation": "/account/{id}/accept-invitation?token={token}"
  },
  "EmailTemplates": {
    "InvitationToJoinOrganization": {
      "Subject": "Invitation to join organization",
      "Body": {
        "Welcome": "<h1 align=\"center\" style=\"font-size: 48px; font-weight: 400; margin: 2; \">Welcome!</h1>",
        "Message": "<p>We're excited to have you get started. First, you need to complete your subscription. Just press the button below.</p>",
        "Button": "<div style=\"text-align:center;\"><a href='{linkToAcceptInvitationWebPage}' style=\"font-size: 20px; font-family: Helvetica, Arial, sans-serif; text-decoration: none; color: #FFBF00; padding: 15px 25px; border-radius: 2px; border: 1px solid #FFBF00; display: inline-block;\" target=\"_blank\">Click Here To Complete Subscription</a></div>",
        "Content": "<div style=\"width:500px;text-align:center;\">{welcome}<br></br>{message}<br></br>{button}"
      }
    }
  },
  "IdentityServer": {
    "Clients": {
      "CleanArchitecture.WebUI": {
        "Profile": "IdentityServerSPA"
      }
    },
    "Key": {
      "Type": "Development"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  }
}