@model ProductFamilyItemViewModel

    <form method="post" asp-action="index" asp-controller="ProductFamilies" class="form-inline filter">
        <div class="form-group">            
            <select asp-items="Model.Rerstaurants" asp-for="SelectedRestaurantId"
                    class="form-control select2"
                    style="width:300px"
                    title="@ProductFamilyResource.Restaurant">
                <option value="">--@ProductFamilyResource.Restaurant--</option>
            </select>
            <input type="submit"
                   class="btn btn-default"
                   value="@SharedAdminResource.Search" />
        </div>
    </form>
        <table class="table">
            <thead class="thead-inverse">
                <tr>

                    <th>
                        @BaseResource.Name
                    </th>

                    <th>
                        @ProductFamilyResource.Restaurant
                    </th>
                    <th>
                        @BaseResource.IsDisabled
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Entities != null)
                {
                    foreach (var item in Model.Entities)
                    {
                        <partial name="_ProductFamilyListItemView" model="item" />
                    }
                }
            </tbody>
        </table>
   