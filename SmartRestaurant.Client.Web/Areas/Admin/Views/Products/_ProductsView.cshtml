@model ProductItemViewModel

<form method="post" asp-action="index" asp-controller="Products" class="form-inline filter">
    <div class="form-group">        
        <select asp-items="Model.Restaurants"
                asp-for="SelectedRestaurantId"
                class="form-control select2"
                id="restaurantsList"
                title="@RestaurantResource.Restaurant">
            <option value="">--@RestaurantResource.Restaurant--</option>
        </select>
    </div>
    <div class="form-group">        
        <select asp-items="Model.ProductFamilies"
                asp-for="SelectedFamilyId"
                id="productFamiliesList"
                class="form-control select2"
                title="@ProductFamilyResource.ProductFamily">
            <option value="">--@ProductFamilyResource.ProductFamily--</option>
        </select>
    </div>
    <div class="form-group">
        <input type="submit"               
               class="btn btn-default"
               value="@SharedAdminResource.Search" />
    </div>


</form>
<table class="table">
    <thead class="thead-inverse">
        <tr>

            <th>
                @BaseResource.Name
            </th>
            <th>
                @ProductFamilyResource.ProductFamily
            </th>
            <th>
                @RestaurantResource.Restaurant
            </th>
            <th>
                @BaseResource.IsDisabled
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Entities != null)
        {
            foreach (var item in Model.Entities)
            {
                <partial name="_ProductListItemView" model="item" />
            }
        }
    </tbody>
</table>