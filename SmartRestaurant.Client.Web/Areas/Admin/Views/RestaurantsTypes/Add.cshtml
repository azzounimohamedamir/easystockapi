@model CreateRestaurantTypeModel

@{
    ViewData["Title"] = FoodCategoryUtilsResource.AddPageTitle;
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="Name" class="control-label">@BaseResource.Name</label>
                <input asp-for="Name" class="form-control" placeholder="@BaseResource.Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Alias" class="control-label col-md-2">@BaseResource.Alias</label>
                <input asp-for="Alias" class="form-control" placeholder="@BaseResource.Alias" />
                <span asp-validation-for="Alias" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label col-md-2">@BaseResource.Description</label>
                <textarea asp-for="Description" class="form-control" placeholder="@BaseResource.Description" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsDisabled" /> @BaseResource.IsDisabled
                </label>
            </div>
            <partial name="_FormCommandsView" />
        </form>
    </div>
</div>

<partial name="_BacktoListView" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}