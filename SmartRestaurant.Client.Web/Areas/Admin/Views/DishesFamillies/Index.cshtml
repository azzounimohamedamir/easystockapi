@model FamilliesViewModel
@{
    ViewData["Title"] = DishFamilyUtilsResource.HomePageTitle;
}

<div class="card">
    <div class="card-header">
        <a data-action="add" class="btn btn-default add-entity"
           asp-controller="DishesFamillies"
           asp-action="add" asp-area="admin">@DishFamilyUtilsResource.ButtonAddNewText</a>
        <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>

        <div class="heading-elements">
            <ul class="list-inline mb-0">
                <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                <li><a data-action="reload" asp-controller="DishesFamillies" asp-action="Reload"><i class="ft-rotate-cw"></i></a></li>
                <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
            </ul>
        </div>
    </div>
    <div class="card-body collapse in"> 
        <div class="filter"> 
            <partial name="_DishFamilyFilterView" model="Model.Filter" />
        </div>
        
        <div class="table-responsive" id="table-dishes-famillies">
            <partial name="_DishesFamilliesView" model="Model.List" />
        </div>
    </div>
</div>
