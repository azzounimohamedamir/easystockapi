@model StaffItemModel
    <tr id="Staff-@Model.Id">

        <td>
            @Html.DisplayFor(modelItem => Model.FirstName)
        </td>

        <td>
            @Html.DisplayFor(modelItem => Model.LastName)
        </td>

        <td>
            @Html.DisplayFor(modelItem => Model.RestaurantName)
        </td> 
        <td>
            @Html.DisplayFor(modelItem => Model.Role)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.IsDisabled)
        </td>
        <td class="align-content-end">
            <a asp-action="Edit"
               asp-controller="Staffs"
               asp-area="Admin"
               asp-route-id="@Model.Id"
               class="action-link action-edit">
                <i class="fa fa-pencil"></i>
            </a>

            <a data-action-url=@Url.Action("Delete","Staffs",new { area="Admin"})
               data-target="#Staffs-@Model.Id"
               data-id="@Model.Id"
               class="action-link action-delete">
                <i class="fa fa-trash-o"></i>
            </a>
        </td>
    </tr>
