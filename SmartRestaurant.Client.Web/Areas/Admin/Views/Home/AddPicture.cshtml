@model SmartRestaurant.Client.Web.Areas.Admin.Models.PictureViewModel

@{
    ViewData["Title"] = "AddPicture";
}

<h1>AddPicture</h1>

<h4>PictureViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <h1>@Model.PictureUrl</h1>
        <form asp-area="Admin" asp-controller="Home" asp-action="AddPicture" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <img src="" style="height:120px; width:120px;" id="img-prev"/>
                <div class="col-md-10">
                    <p>Upload one or more files using this form:</p>
                    <input type="file" name="PictureFile" accept="image/*" onchange="displayPreview(this,'img-prev')" multiple>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/admin.js"></script>
}