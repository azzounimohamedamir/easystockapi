@model TableViewModel

@{
    ViewData["Title"] = TableUtilsResource.AddPageTitle;
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="CreateModel.Name" class="control-label">@BaseResource.Name</label>
                <input asp-for="CreateModel.Name" class="form-control" placeholder="@BaseResource.Name" />
                <span asp-validation-for="CreateModel.Name" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="RestaurantId" class="control-label">@RestaurantResource.Restaurant</label>
                <select asp-items="Model.Restaurants"
                        asp-for="RestaurantId"
                        id="restaurantsList"
                        class="form-control select2"
                        title="@RestaurantResource.Restaurant">
                    <option value="">--@RestaurantResource.Restaurant--</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="FloorId" class="control-label">@FloorResource.Floor</label>
                <select asp-items="Model.Floors"
                        asp-for="FloorId"
                        id="floorsList"
                        class="form-control select2"
                        title="@FloorResource.Floor">
                    <option value="">--@FloorResource.Floor--</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="CreateModel.AreaId" class="control-label">@AreaResource.Area</label>
                <select id="areasList"
                        asp-items="Model.Areas"
                        asp-for="CreateModel.AreaId"
                        class="form-control select2"
                        title="@AreaResource.Area">
                    <option value="">--@AreaResource.Area--</option>
                </select>
                <span asp-validation-for="CreateModel.AreaId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CreateModel.Description" class="control-label">@BaseResource.Description</label>
                <textarea asp-for="CreateModel.Description" class="form-control" placeholder="@BaseResource.Description"></textarea>
                <span asp-validation-for="CreateModel.Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CreateModel.IsDisabled" /> @BaseResource.IsDisabled
                </label>
            </div>

            <partial name="_FormCommandsView" />
        </form>
    </div>
</div>

<partial name="_BacktoListView" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}