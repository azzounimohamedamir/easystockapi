@model TemplateViewModel

@{
    ViewData["Title"] = "Edit";
}

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div class="container">
                <div class="col-md-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="UpdateModel.Id" />
                    <div class="form-group">
                        <label asp-for="UpdateModel.Name" class="control-label"></label>
                        <input asp-for="UpdateModel.Name" class="form-control" />
                        <span asp-validation-for="UpdateModel.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UpdateModel.Alias" class="control-label"></label>
                        <input asp-for="UpdateModel.Alias" class="form-control" />
                        <span asp-validation-for="UpdateModel.Alias" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UpdateModel.Description" class="control-label"></label>
                        <input asp-for="UpdateModel.Description" class="form-control" />
                        <span asp-validation-for="UpdateModel.Description" class="text-danger"></span>
                    </div>



                    <div class="form-group">
                        <label asp-for="UpdateModel.Type" class="control-label">@TemplateResource.Type</label>
                        <select asp-items="Model.TemplateType" asp-for="UpdateModel.Type"
                                class="form-control select2"
                                title="@TemplateResource.Type">
                            <option value="">--@TemplateResource.Type--</option>
                        </select>
                        <span asp-validation-for="UpdateModel.Type" class="text-danger"></span>
                    </div>

                    </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="UpdateModel.Title" class="control-label"></label>
                        <input asp-for="UpdateModel.Title" class="form-control" />
                        <span asp-validation-for="UpdateModel.Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
            <label asp-for="UpdateModel.Subject" class="control-label"></label>
            <input asp-for="UpdateModel.Subject" class="form-control" />
            <span asp-validation-for="UpdateModel.Subject" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="UpdateModel.Body" class="control-label"></label>
            <textarea asp-for="UpdateModel.Body" class="form-control" ></textarea>
            <span asp-validation-for="UpdateModel.Body" class="text-danger"></span>
        </div>

                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="UpdateModel.IsDisabled" /> @BaseResource.IsDisabled
                        </label>
                    </div>

                </div>
                </div>
                    <partial name="_FormCommandsView" />
        </form>
    </div>
</div>






<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
