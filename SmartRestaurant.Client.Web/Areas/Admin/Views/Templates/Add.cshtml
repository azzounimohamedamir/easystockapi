@model TemplateViewModel

@{
    ViewData["Title"] = "Add";
}


<hr />
<div class="row">
    <div class="col-md-12">
        
            
                    <form asp-action="Add">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="container">
                            <div class="col-md-6">

                                <div class="form-group">
                                    <label asp-for="CreateModel.Name" class="control-label"></label>
                                    <input asp-for="CreateModel.Name" class="form-control" />
                                    <span asp-validation-for="CreateModel.Name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="CreateModel.Alias" class="control-label"></label>
                                    <input asp-for="CreateModel.Alias" class="form-control" />
                                    <span asp-validation-for="CreateModel.Alias" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="CreateModel.Description" class="control-label"></label>
                                    <input asp-for="CreateModel.Description" class="form-control" />
                                    <span asp-validation-for="CreateModel.Description" class="text-danger"></span>
                                </div>



                                <div class="form-group">
                                    <label asp-for="CreateModel.Type" class="control-label">@TemplateResource.Type</label>
                                    <select asp-items="Model.TemplateType" asp-for="CreateModel.Type"
                                            class="form-control select2"
                                            title="@TemplateResource.Type">
                                        <option value="">--@TemplateResource.Type--</option>
                                    </select>
                                    <span asp-validation-for="CreateModel.Type" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
            <label asp-for="CreateModel.Title" class="control-label"></label>
            <input asp-for="CreateModel.Title" class="form-control" />
            <span asp-validation-for="CreateModel.Title" class="text-danger"></span>
        </div>
                                <div class="form-group">
            <label asp-for="CreateModel.Subject" class="control-label"></label>
            <input asp-for="CreateModel.Subject" class="form-control" />
            <span asp-validation-for="CreateModel.Subject" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CreateModel.Body" class="control-label"></label>
            <textarea asp-for="CreateModel.Body" class="form-control" rows="3"  ></textarea>
            <span asp-validation-for="CreateModel.Body" class="text-danger"></span>
        </div>

                                <div class="form-group form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" asp-for="CreateModel.IsDisabled" /> @BaseResource.IsDisabled
                                    </label>
                                </div>
                            </div>
                        </div>    
                                <partial name="_FormCommandsView" />
</form>
    </div>
</div>


    <partial name="_BacktoListView" />


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
