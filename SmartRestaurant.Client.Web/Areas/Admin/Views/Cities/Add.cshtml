@model CityViewModel

@{
    ViewData["Title"] = CityUtilsResource.AddPageTitle;
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="CountryId" class="control-label">@CityResource.CountryId</label>
                <select id="countryDropDownList" asp-items="Model.Countries" asp-for="CountryId"
                        class="form-control select2"
                        title="@CityResource.CountryId">
                    <option value="">--@CityResource.CountryId--</option>
                </select>
                <span asp-validation-for="CountryId" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="CreateModel.StateId" class="control-label">@CityResource.StateId</label>
                <select id="stateDropDownList" asp-items="Model.States" asp-for="CreateModel.StateId"
                        class="form-control select2"
                        title="@CityResource.StateId">
                    <option value="">--@CityResource.StateId--</option>
                </select>
                <span asp-validation-for="CreateModel.StateId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CreateModel.Name" class="control-label"></label>
                <input asp-for="CreateModel.Name" class="form-control" />
                <span asp-validation-for="CreateModel.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateModel.Alias" class="control-label"></label>
                <input asp-for="CreateModel.Alias" class="form-control" />
                <span asp-validation-for="CreateModel.Alias" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CreateModel.IsoCode" class="control-label"></label>
                <input asp-for="CreateModel.IsoCode" class="form-control" />
                <span asp-validation-for="CreateModel.IsoCode" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CreateModel.IsDisabled" /> @BaseResource.IsDisabled
                </label>
            </div>
            <partial name="_FormCommandsView" />
        </form>
    </div>
</div>

<partial name="_BacktoListView" />


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
