@model PlaceItemViewModel

    <form method="post" class="form-inline filter">
        <div class="form-group">
            <input type="text" id="Name" class="form-control" placeholder="Name" />
        </div>
        <div class="form-group">
            <select id="restaurantsList" asp-items="Model.Filter.Restaurants" asp-for="Filter.SelectedRestaurantId"
                    class="form-control select2"
                    title="@RestaurantResource.Restaurant">
                <option value="">--@RestaurantResource.Restaurant--</option>
            </select>
        </div>
        <div class="form-group">
            <select id="floorsList"
                    asp-items="Model.Filter.Floors"
                    asp-for="Filter.SelectedFloorId"
                    class="form-control select2"
                    title="@AreaResource.FloorId">
                <option value="">--@AreaResource.FloorId--</option>
            </select>
        </div>
        <div class="form-group">
            <select id="areasList"
                    asp-items="Model.Filter.Areas"
                    asp-for="Filter.SelectedAreaId"
                    class="form-control select2"
                    title="@AreaResource.Area">
                <option value="">--@AreaResource.Area--</option>
            </select>
        </div>
        <div class="form-group">
            <select id="areasList"
                    asp-items="Model.Filter.Tables"
                    asp-for="Filter.SelectedTableId"
                    class="form-control select2"
                    title="@TableResource.Table">
                <option value="">--@TableResource.Table--</option>
            </select>
        </div>
        <input type="submit"
               data-action="Index"
               data-controller="Places"
               data-Place="Admin"
               value="@SharedAdminResource.Search"
               id="sr-form-submit"
               class="btn btn-default" />

    </form>

<Place class="Place">
    <thead class="thead-inverse">
        <tr>

            <th>
                @BaseResource.Name
            </th>
            <th>
                @FloorResource.Floor
            </th>
            <th>
                @AreaResource.Area
            </th>
            <th>
                @TableResource.Table
            </th>
            <th>
                @BaseResource.IsDisabled
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Places != null)
        {
            foreach (var item in Model.Places)
            {
                <partial name="_PlaceListItemView" model="item" />
            }
        }
    </tbody>
</Place>
