@using SmartRestaurant.Application.Pricings.Tarifications.Queries.GetById
@model SmartRestaurant.Application.Pricings.Tarifications.Queries.GetById.TarificationItemModel
    <tr id="Tarification-@Model.Id">

        <td>
            @Html.DisplayFor(modelItem => Model.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.RestaurantName)
        </td>        
        <td>
            @Html.DisplayFor(modelItem => Model.IsDisabled)
        </td>
        <td class="align-content-end">
            <a asp-action="Edit"
               asp-controller="Tarifications"
               asp-area="Admin"
               asp-route-id="@Model.Id"
               class="action-link action-edit">
                <i class="fa fa-pencil"></i>
            </a>

            <a data-action-url=@Url.Action("Delete","Tarifications",new { area="Admin"})
               data-target="#Tarifications-@Model.Id"
               data-id="@Model.Id"
               class="action-link action-delete">
                <i class="fa fa-trash-o"></i>
            </a>
        </td>
    </tr>
