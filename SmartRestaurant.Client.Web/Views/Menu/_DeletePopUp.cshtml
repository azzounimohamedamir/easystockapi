@using SmartRestaurant.Resources.Menus.Menu
<div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                @MenuResource.PopupDelete

            </div>
            <div class="modal-body">
                <span>
                    @MenuUtilsResource.DeleteMessage
                </span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">@MenuUtilsResource.ButtonCancelDelete</button>
                <a onclick="onDelete()" class="btn btn-danger btn-ok">@MenuUtilsResource.ButtonDeleteConfirmation</a>
            </div>
        </div>
    </div>
</div>