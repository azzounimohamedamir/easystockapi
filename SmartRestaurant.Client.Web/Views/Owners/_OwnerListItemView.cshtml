@using SmartRestaurant.Application.Restaurants.Owners.Queries
@model SmartRestaurant.Application.Restaurants.Owners.Queries.OwnerItemModel
    <tr id="owner-@Model.Id">

        <td>
            @Html.DisplayFor(modelItem => Model.FirstName)
        </td>

        <td>
            @Html.DisplayFor(modelItem => Model.LastName)
        </td>

        <td>
            @Html.DisplayFor(modelItem => Model.Address.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.IsDisabled)
        </td>
        <td class="align-content-end">
            <a asp-action="Edit"
               asp-controller="Owners"
               asp-area="Admin"
               asp-route-id="@Model.Id"
               class="action-link action-edit">
                <i class="fa fa-pencil"></i>
            </a>

            <a data-action-url=@Url.Action("Delete","Owners",new { area="Admin"})
               data-target="#Owners-@Model.Id"
               data-id="@Model.Id"
               class="action-link action-delete">
                <i class="fa fa-trash-o"></i>
            </a>
        </td>
    </tr>
