@using SmartRestaurant.Client.Web.Models.Restaurants
@using SmartRestaurant.Resources.Restaurants.Areas
@model SmartRestaurant.Client.Web.Models.Restaurants.AreaViewModel

@{
    ViewData["Title"] = AreaUtilsResource.EditPageTitle;
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="UpdateModel.Id" />


            <div class="form-group">
                <label asp-for="UpdateModel.Name" class="control-label">@BaseResource.Name</label>
                <input asp-for="UpdateModel.Name" class="form-control" placeholder="@BaseResource.Name" />
                <span asp-validation-for="UpdateModel.Name" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="RestaurantId" class="control-label">@AreaResource.RestaurantId</label>
                        <select asp-items="Model.Restaurants"
                                asp-for="RestaurantId"
                                id="restaurantsList"
                                class="form-control select2"
                                title="@AreaResource.RestaurantId">
                            <option value="">--@AreaResource.RestaurantId--</option>
                        </select>
                        <span asp-validation-for="RestaurantId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="UpdateModel.FloorId" class="control-label">@AreaResource.FloorId</label>
                        <select asp-items="Model.Floors"
                                asp-for="UpdateModel.FloorId"
                                id="floorsList"
                                class="form-control select2"
                                title="@AreaResource.FloorId">
                            <option value="">--@AreaResource.FloorId--</option>
                        </select>
                        <span asp-validation-for="UpdateModel.FloorId" class="text-danger"></span>
                    </div>
                </div>
            </div>


            <div class="form-group">
                <label asp-for="UpdateModel.Alias" class="control-label col-md-2">@BaseResource.Alias</label>
                <input asp-for="UpdateModel.Alias" class="form-control" placeholder="@BaseResource.Alias" />
                <span asp-validation-for="UpdateModel.Alias" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UpdateModel.Description" class="control-label">@BaseResource.Description</label>
                <textarea asp-for="UpdateModel.Description" class="form-control" placeholder="@BaseResource.Description"></textarea>
                <span asp-validation-for="UpdateModel.Description" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="UpdateModel.IsDisabled" /> @BaseResource.IsDisabled
                </label>
            </div>
            <partial name="_FormCommandsView" />
        </form>
    </div>
</div>

<partial name="_BacktoListView" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}