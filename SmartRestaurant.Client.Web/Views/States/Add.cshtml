@using SmartRestaurant.Client.Web.Models.States
@model SmartRestaurant.Client.Web.Models.States.StateViewModel

@{
    ViewData["Title"] = StateUtilsResource.AddPageTitle;
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>



            <div class="form-group">
                <label asp-for="CreateModel.CountryId" class="control-label">@StateResource.CountryId</label>
                <select asp-items="Model.Countries" asp-for="CreateModel.CountryId"
                        class="form-control select2"
                        title="@StateResource.CountryId">
                    <option value="">--@StateResource.CountryId--</option>
                </select>
                <span asp-validation-for="CreateModel.CountryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CreateModel.Name" class="control-label"></label>
                <input asp-for="CreateModel.Name" class="form-control" />
                <span asp-validation-for="CreateModel.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateModel.Alias" class="control-label"></label>
                <input asp-for="CreateModel.Alias" class="form-control" />
                <span asp-validation-for="CreateModel.Alias" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CreateModel.IsoCode" class="control-label"></label>
                <input asp-for="CreateModel.IsoCode" class="form-control" />
                <span asp-validation-for="CreateModel.IsoCode" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CreateModel.IsDisabled" /> @BaseResource.IsDisabled
                </label>
            </div>
            <partial name="_FormCommandsView" />
        </form>
    </div>
</div>

<partial name="_BacktoListView" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


