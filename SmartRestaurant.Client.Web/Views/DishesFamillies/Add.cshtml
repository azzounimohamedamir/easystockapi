@using SmartRestaurant.Client.Web.Models.Dishes
@using SmartRestaurant.Resources.Dishes.DishFamily
@using SmartRestaurant.Resources.Foods.FoodCategories
@model SmartRestaurant.Client.Web.Models.Dishes.CreateDishFamilyViewModel

@{
    ViewData["Title"] = DishFamilyUtilsResource.AddPageTitle;
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add" enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ParentId" />
            <input type="hidden" asp-for="CreateModel.ParentId" />
            <input type="hidden" asp-for="CreateModel.PictureUrl" />

            <div class="form-group">
                <label asp-for="CreateModel.RestaurantId" class="control-label">@DishFamilyResource.RestaurantId</label>
                <select asp-for="CreateModel.RestaurantId" asp-items="Model.Restaurants" class="form-control">
                    <option value="">-- @DishFamilyResource.RestaurantId --</option>
                </select>
                <span asp-validation-for="CreateModel.RestaurantId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CreateModel.Name" class="control-label">@BaseResource.Name</label>
                <input asp-for="CreateModel.Name" class="form-control" placeholder="@BaseResource.Name" />
                <span asp-validation-for="CreateModel.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CreateModel.ParentId" class="control-label">@FoodCategoryResource.ParentId</label>
                <partial name="_CascadingSelectListView" model="Model.Parents" />
                <span asp-validation-for="CreateModel.ParentId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CreateModel.Alias" class="control-label col-md-2">@BaseResource.Alias</label>
                <input asp-for="CreateModel.Alias" class="form-control" placeholder="@BaseResource.Alias" />
                <span asp-validation-for="CreateModel.Alias" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CreateModel.Description" class="control-label">@BaseResource.Description</label>
                <textarea asp-for="CreateModel.Description" class="form-control" placeholder="@BaseResource.Description"></textarea>
                <span asp-validation-for="CreateModel.Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CreateModel.IsDisabled" /> @BaseResource.IsDisabled
                </label>
            </div>

            <div class="form-group">
                <label asp-for="CreateModel.PictureUrl" class="control-label">@BaseResource.PictureUrl</label>
                <partial name="_FileViewModel" for="Picture" />
                <span asp-validation-for="CreateModel.PictureUrl" class="text-danger"></span>
            </div>

            <partial name="_FormCommandsView" />
        </form>
    </div>
</div>

<partial name="_BacktoListView" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}