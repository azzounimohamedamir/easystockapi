@using SmartRestaurant.Client.Web.Models.Dishes
@using SmartRestaurant.Resources.Dishes.DishFamily
@using SmartRestaurant.Resources.UI.Areas.Admin
@model SmartRestaurant.Client.Web.Models.Dishes.DishFamilyFilterViewModel
    <form asp-action="Famillies" asp-controller="DishesFamillies" class="form-inline">
        <div class="form-group">
            <input type="text" asp-for="Name" placeholder="@BaseResource.Name" class="form-control" />
        </div>
        <div class="form-group">
            <select asp-items="Model.Restaurants" asp-for="RestaurantId" class="form-control">
                <option value="">-- @DishFamilyResource.RestaurantId --</option>
            </select>
        </div>
        <div class="form-group">
            <select asp-items="Model.Parents" asp-for="ParentId" class="form-control">
                <option value="">-- @DishFamilyResource.ParentId --</option>
            </select>
        </div>        
        <input type="submit" value="@SharedAdminResource.Search" class="btn btn-default" />
    </form>