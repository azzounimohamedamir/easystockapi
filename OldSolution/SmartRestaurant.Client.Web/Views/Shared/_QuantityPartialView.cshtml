@model QuantityViewModel

<div class="form-group">
    <label asp-for="Quantity.UnitId" class="control-label"></label>
    <select asp-items="Model.Units.Units" asp-for="Quantity.UnitId" class="form-control select2">
        <option>-- @Model.Units.Text --</option>
    </select>
    <span asp-validation-for="Quantity.UnitId" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Quantity.Value" class="control-label"></label>
    <input asp-for="Quantity.Value" class="form-control" />
    <span asp-validation-for="Quantity.Value" class="text-danger"></span>
</div>


