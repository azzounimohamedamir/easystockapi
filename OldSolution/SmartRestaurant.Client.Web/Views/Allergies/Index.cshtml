@using SmartRestaurant.Resources.Allergies.Allergies
@{
    ViewData["Title"] = AllergyUtilsResource.HomePageTitle;
}

<div class="card">
    <div class="card-header">
        <a data-action="add" class="btn btn-default add-entity"
           asp-controller="Allergies"
           asp-action="add">@AllergyUtilsResource.ButtonAddNewText</a>
        
        <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>

        <div class="heading-elements">
            <ul class="list-inline mb-0">
                <li>

                </li>
                <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                <li><a data-action="reload" asp-controller="Allergies" asp-action="Reload"><i class="ft-rotate-cw"></i></a></li>
                <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
            </ul>
        </div>
    </div>
    <div class="card-body collapse in">
        <div class="table-responsive" 
             id="table-Allergy">
            <partial name="_AllergiesView" model="Model" />
        </div>
    </div>
</div>
