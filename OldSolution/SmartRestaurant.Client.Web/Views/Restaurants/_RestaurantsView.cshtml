@using SmartRestaurant.Client.Web.Models.Restaurants
@using SmartRestaurant.Resources.Restaurants.Owners
@using SmartRestaurant.Resources.Restaurants.RestaurantTypes
@using SmartRestaurant.Resources.UI.Areas.Admin
@model SmartRestaurant.Client.Web.Models.Restaurants.RestaurantItemViewModel

<form method="post" asp-action="index" asp-controller="Restaurants" class="form-inline filter">
    <div class="form-group">        
        <select asp-items="Model.RestaurantTypes"
                asp-for="SelectedRestaurantTypeId"
                class="form-control select2"
                title="@RestaurantTypeResource.RestaurantType">
            <option value="">--@RestaurantTypeResource.RestaurantType--</option>
        </select>
    </div>
    <div class="form-group">        
        <select asp-items="Model.Owners"
                asp-for="SelectedOwnerId"
                class="form-control select2"
                title="@OwnerResource.Owner">
            <option value="">--@OwnerResource.Owner--</option>
        </select>
    </div>
    <input type="submit"
           class="btn btn-default"
           value="@SharedAdminResource.Search" />
</form>
<table class="table">
    <thead class="thead-inverse">
        <tr>

            <th>
                @BaseResource.Name
            </th>
            <th>
                @RestaurantTypeResource.RestaurantType
            </th>
            <th>
                @OwnerResource.Owner
            </th>
            <th>
                @BaseResource.IsDisabled
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Entities != null)
        {
            foreach (var item in Model.Entities)
            {
                <partial name="_RestaurantListItemView" model="item" />
            }
        }
    </tbody>
</table>
